<main>
    <form class="form" id="form">
        <img height="160px" width="100%" src="https://picsum.photos/1200/1200" alt="form_image" class="form__img">
        <h1 class="form__title"> Реєстрація користувача</h1>
        <div class="form__group">
            <label for="username" class="form__label">Ім'я користувача</label>
            <input type="text" class="form__input" id="username" name="username" required>
            <span class="form__button--save">Save</span>
        </div>
        <div class="form__group">
            <label for="email" class="form__label">Email</label>
            <input type="email" class="form__input" id="email" name="email" required>
        </div>
        <div class="form__group">
            <label for="age" class="form__label">Вік</label>
            <input type="number" class="form__input" id="age" name="age" required>
            <span class="form__button--add" operator="+" value="10">+10</span>
            <span class="form__button--add" operator="-" value="10">-10</span>
        </div>

        <div class="form__group">
            <label for="role" class="form__label">Оберіть роль</label>
            <select multiple class="form__select" name="role" id="role" required>
                <option value="" selected="" disabled="">Роль</option>
                <option value="admin">Адмін</option>
                <option value="user">Користувач</option>
            </select>
        </div>
        <div class="form__group form__group--checkbox">
            <label for="agree" class="form__label">Надсилати повідомлення на email</label>
            <input type="checkbox" class="form__input" id="agree" name="agree" required>
        </div>
        <button type="button" class="form__button">Зареєструватися</button>
    </form>
</main>

